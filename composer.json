{
    "name": "daikon/bitcoin-interop",
    "type": "library",
    "description": "Bitcoin interop components for Daikon-CQRS projects.",
    "keywords": [ "bitcoin", "transaction", "block", "currency", "interop" ],
    "homepage": "https://github.com/daikon-cqrs/bitcoin-interop",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:MrHash/whoops-middleware.git"
        }
    ],
    "require": {
        "php": "^7.4",
        "daikon/entity": "master@dev",
        "daikon/interop": "master@dev",
        "daikon/message-bus": "master@dev",
        "daikon/money-interop": "master@dev",
        "daikon/value-object": "master@dev",
        "moneyphp/money": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "sebastian/phpcpd": "^5.0",
        "squizlabs/php_codesniffer": "^3.3",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\Bitcoin\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Bitcoin\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src tests",
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src tests",
        "copy-paste-detector": "phpcpd src tests || true",
        "psalm": "psalm --shepherd --show-info=true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "@psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
